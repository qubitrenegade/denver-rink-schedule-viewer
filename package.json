{
  "name": "denver-rink-schedule-viewer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest --environment happy-dom",
    "test:watch": "vitest --watch --environment happy-dom",
    "test:timezone": "vitest run --environment happy-dom workers/shared/timezone-utils.test.ts workers/scrapers/apex-ice.test.ts",
    "test:critical": "vitest run --environment happy-dom workers/shared/ src/utils/",
    "fix:apex-timezone": "node scripts/clear-apex-data.js",
    "check:apex-times": "node scripts/check-apex-times.js",
    "scrape": "bun run scripts/scraper.ts",
    "scrape:ice-ranch": "bun run scripts/scraper.ts --rink ice-ranch",
    "scrape:big-bear": "bun run scripts/scraper.ts --rink big-bear",
    "scrape:du-ritchie": "bun run scripts/scraper.ts --rink du-ritchie",
    "scrape:foothills": "bun run scrape:foothills-edge",
    "scrape:foothills-edge": "bun run scripts/scraper.ts --rink foothills-edge",
    "scrape:ssprd": "bun run scripts/scraper.ts --ssprd",
    "scrape:ssprd-249": "bun run scripts/scraper.ts --rink ssprd-249",
    "scrape:ssprd-250": "bun run scripts/scraper.ts --rink ssprd-250",
    "scrape:local": "bun run scripts/scraper.ts --local",
    "scrape:test": "bun run scripts/scraper.ts --test",
    "test:puppeteer": "bun run scripts/test-puppeteer.ts",
    "lint": "eslint --no-error-on-unmatched-pattern src/**/*.{ts,tsx} workers/**/*.ts",
    "lint:fix": "eslint --no-error-on-unmatched-pattern --fix src/**/*.{ts,tsx} workers/**/*.ts",
    "bench": "vitest bench",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "react": "18",
    "react-dom": "18",
    "vite": "^7.0.2",
    "wrangler": "^4.18.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250603.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "cheerio": "^1.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.1.4"
  }
}
